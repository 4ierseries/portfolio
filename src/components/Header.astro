---
import removeTrailingSlash from "@/utils/removeTrailingSlash";
import presentation from "@/data/presentation";

const pathname = removeTrailingSlash(Astro.url.pathname);
---

<header class="z-40 flex w-full flex-col gap-2 md:flex-row md:justify-between">
  <a href="/" class="hover:text-[#9750d7] transition-colors duration-200">౨ৎ</a>

  <nav role="navigation">
    <ul role="list" class="flex flex-row gap-2">
      <li>
        <a
            href="/"
            class:list={{
              ["hover:text-[#9750d7] fancy transition-colors duration-200"]: true,
              ["text-[#9750d7] fancy"]: pathname === "/",
              ["text-neutral-400"]: pathname !== "/"
            }}
        >
          home
        </a>
      </li>

      <li class="text-neutral-400">/</li>

      <li>
        <a
            href="/projects"
            class:list={{
              ["hover:text-[#9750d7] fancy transition-colors duration-200"]: true,
              ["text-[#9750d7] fancy"]: pathname === "/projects",
              ["text-neutral-400"]: pathname !== "/projects"
            }}
        >
          projects
        </a>
      </li>
    </ul>
  </nav>
</header>